{
  "info": {
    "_postman_id": "c1a2b3c4-d5e6-4f7g-8h9i-0j1k2l3m4n5o",
    "name": "Cart Operations (Consumer & Merchant)",
    "description": "Postman collection for Add to Cart and Get Cart operations for both Consumer and Merchant flows.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Consumer Cart",
      "item": [
        {
          "name": "Get Current Cart",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "x-tenant-id",
                "value": "{{tenantId}}",
                "type": "text"
              },
              {
                "key": "x-session-id",
                "value": "{{sessionId}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/cart",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "cart"
              ]
            },
            "description": "Retrieves the current shopping cart for a consumer (guest or logged in)."
          },
          "response": []
        },
        {
          "name": "Add Item to Cart",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "x-tenant-id",
                "value": "{{tenantId}}",
                "type": "text"
              },
              {
                "key": "x-session-id",
                "value": "{{sessionId}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"productId\": \"{{productId}}\",\n  \"quantity\": 1,\n  \"productVariantId\": null\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/cart/items",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "cart",
                "items"
              ]
            },
            "description": "Adds a product or variant to the consumer cart."
          },
          "response": []
        }
      ]
    },
    {
      "name": "Merchant Cart",
      "item": [
        {
          "name": "Get Merchant Cart",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{merchantToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/merchant/cart",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "merchant",
                "cart"
              ]
            },
            "description": "Retrieves the procurement cart for an authenticated merchant."
          },
          "response": []
        },
        {
          "name": "Add Item to Merchant Cart",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{merchantToken}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"productId\": \"{{productId}}\",\n  \"qty\": 5,\n  \"metadata\": {\n    \"accountIdentifier\": \"player_123\"\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/merchant/cart/items",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "merchant",
                "cart",
                "items"
              ]
            },
            "description": "Adds internal products to the merchant's professional procurement cart."
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api",
      "type": "string"
    },
    {
      "key": "tenantId",
      "value": "clz_tenant_001",
      "type": "string"
    },
    {
      "key": "sessionId",
      "value": "guest-session-123456",
      "type": "string"
    },
    {
      "key": "productId",
      "value": "prod_uuid_here",
      "type": "string"
    },
    {
      "key": "merchantToken",
      "value": "your_merchant_bearer_token",
      "type": "string"
    }
  ]
}
