{
  "info": {
    "_postman_id": "8f8e7c1a-5d4b-4f9e-827c-6e2a1b3c4d5e",
    "name": "Mobile App Order Cycle (SAEAA)",
    "description": "API collection for testing the Mobile App order flow, cart management, and serial number retrieval.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Products",
      "item": [
        {
          "name": "Check Product Availability",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "X-Tenant-Domain",
                "value": "{{tenantDomain}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/products/:id",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "products",
                ":id"
              ],
              "variable": [
                {
                  "key": "id",
                  "value": "{{productId}}"
                }
              ]
            },
            "description": "Retrieves product details including availability status."
          },
          "response": []
        }
      ]
    },
    {
      "name": "Cart Management",
      "item": [
        {
          "name": "Get Current Cart",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "X-Tenant-Domain",
                "value": "{{tenantDomain}}",
                "type": "text"
              },
              {
                "key": "X-Session-ID",
                "value": "{{sessionId}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/cart",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "cart"
              ]
            }
          },
          "response": []
        },
        {
          "name": "Add Item to Cart",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "X-Tenant-Domain",
                "value": "{{tenantDomain}}",
                "type": "text"
              },
              {
                "key": "X-Session-ID",
                "value": "{{sessionId}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"productId\": \"{{productId}}\",\n  \"quantity\": 1,\n  \"productVariantId\": null\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/cart/items",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "cart",
                "items"
              ]
            }
          },
          "response": []
        },
        {
          "name": "Update Item Quantity",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "X-Tenant-Domain",
                "value": "{{tenantDomain}}",
                "type": "text"
              },
              {
                "key": "X-Session-ID",
                "value": "{{sessionId}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"quantity\": 2\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/cart/items/:itemId",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "cart",
                "items",
                ":itemId"
              ],
              "variable": [
                {
                  "key": "itemId",
                  "value": "{{cartItemId}}"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Remove Item",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "X-Tenant-Domain",
                "value": "{{tenantDomain}}",
                "type": "text"
              },
              {
                "key": "X-Session-ID",
                "value": "{{sessionId}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/cart/items/:itemId",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "cart",
                "items",
                ":itemId"
              ],
              "variable": [
                {
                  "key": "itemId",
                  "value": "{{cartItemId}}"
                }
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Checkout",
      "item": [
        {
          "name": "Place Order",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "X-Tenant-Domain",
                "value": "{{tenantDomain}}",
                "type": "text"
              },
              {
                "key": "X-Session-ID",
                "value": "{{sessionId}}",
                "type": "text"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"customerEmail\": \"customer@example.com\",\n  \"customerName\": \"John Doe\",\n  \"customerPhone\": \"+1234567890\",\n  \"paymentMethod\": \"WALLET_BALANCE\",\n  \"useWalletBalance\": true,\n  \"shippingAddress\": {},\n  \"billingAddress\": {}\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/checkout",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "checkout"
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Order Management & Serials",
      "item": [
        {
          "name": "List Customer Orders",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/orders?page=1&limit=20",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "orders"
              ],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "20"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Order Details",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/orders/:id",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "orders",
                ":id"
              ],
              "variable": [
                {
                  "key": "id",
                  "value": "{{orderId}}"
                }
              ]
            },
            "description": "Retrieves full details of an order. Serial numbers are typically found in the deliveryFiles or deliveryDetails object."
          },
          "response": []
        },
        {
          "name": "Download Serial Numbers",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/orders/:id/download/:fileType",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "orders",
                ":id",
                "download",
                ":fileType"
              ],
              "variable": [
                {
                  "key": "id",
                  "value": "{{orderId}}"
                },
                {
                  "key": "fileType",
                  "value": "text"
                }
              ]
            },
            "description": ":fileType options: text, excel, pdf"
          },
          "response": []
        },
        {
          "name": "Public Download",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/orders/:id/public/download/:fileType?token={{downloadToken}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "orders",
                ":id",
                "public",
                "download",
                ":fileType"
              ],
              "query": [
                {
                  "key": "token",
                  "value": "{{downloadToken}}"
                }
              ],
              "variable": [
                {
                  "key": "id",
                  "value": "{{orderId}}"
                },
                {
                  "key": "fileType",
                  "value": "text"
                }
              ]
            }
          },
          "response": []
        }
      ]
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          ""
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          ""
        ]
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://api.saeaa.com/api",
      "type": "string"
    },
    {
      "key": "tenantDomain",
      "value": "store.saeaa.com",
      "type": "string"
    },
    {
      "key": "sessionId",
      "value": "mobile-session-123456",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "your_bearer_token_here",
      "type": "string"
    },
    {
      "key": "productId",
      "value": "product-uuid-here",
      "type": "string"
    },
    {
      "key": "cartItemId",
      "value": "cart-item-uuid-here",
      "type": "string"
    },
    {
      "key": "orderId",
      "value": "order-uuid-here",
      "type": "string"
    },
    {
      "key": "downloadToken",
      "value": "public-token-here",
      "type": "string"
    }
  ]
}
