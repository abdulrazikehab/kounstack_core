{
  "name": "app-core",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "nest start --watch",
    "start": "nest start",
    "build": "nest build",
    "start:dev": "ts-node-dev --respawn --transpile-only src/main.ts",
    "start:prod": "node dist/main.js",
    "prisma:generate": "prisma generate --schema=prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema=prisma/schema.prisma",
    "prisma:migrate:safe": "prisma migrate dev --create-only --schema=prisma/schema.prisma --name migration",
    "prisma:migrate:deploy": "prisma migrate deploy --schema=prisma/schema.prisma",
    "prisma:migrate:create": "powershell -ExecutionPolicy Bypass -File scripts/migrate-safe.ps1",
    "prisma:migrate:apply": "powershell -ExecutionPolicy Bypass -File scripts/migrate-deploy-safe.ps1"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.74.0",
    "@nestjs/axios": "^4.0.1",
    "@nestjs/common": "^10.4.20",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/platform-socket.io": "^10.4.22",
    "@nestjs/throttler": "^6.4.0",
    "@nestjs/websockets": "^10.4.22",
    "@prisma/client": "^5.0.0",
    "axios": "^1.13.2",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cloudinary": "^2.9.0",
    "cookie-parser": "^1.4.7",
    "disposable-email-domains": "^1.0.62",
    "dotenv": "^16.0.0",
    "exceljs": "^4.4.0",
    "express-rate-limit": "^8.2.1",
    "ioredis": "^5.9.3",
    "kickbox": "^2.0.4",
    "nodemailer": "^7.0.10",
    "openai": "^6.22.0",
    "otplib": "^13.1.1",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "pdf-lib": "^1.17.1",
    "qrcode": "^1.5.4",
    "reflect-metadata": "^0.1.13",
    "resend": "^3.5.0",
    "socket.io": "^4.8.3",
    "uuid": "^13.0.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/nodemailer": "^7.0.3",
    "@types/passport-google-oauth20": "^2.0.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/qrcode": "^1.5.6",
    "@types/react": "^19.2.9",
    "@types/uuid": "^10.0.0",
    "prisma": "^5.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.0"
  }
}
